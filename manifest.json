{
  "manifest_version": 3,
  "name": "Sentinel: Password Leak Monitor",
  "version": "1.0",
  "description": "Checks if your password has been exposed in a data breach before you submit.",
  "permissions": ["storage"],
  "host_permissions": ["https://api.pwnedpasswords.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}